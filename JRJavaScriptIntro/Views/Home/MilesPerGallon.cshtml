@model MilesPerGallonVM

<h4>Miles Per Gallon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MilesPerGallon">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LitersUsed" class="control-label"></label>
                <input asp-for="LitersUsed" class="form-control" />
                <span asp-validation-for="LitersUsed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MilesTraveled" class="control-label"></label>
                <input asp-for="MilesTraveled" class="form-control" />
                <span asp-validation-for="MilesTraveled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MilesPerGallon" class="control-label"></label>
                <input readonly asp-for="MilesPerGallon" class="form-control" />
                <span asp-validation-for="MilesPerGallon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="calculateBtn" 
                    value="Calculate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Home</a>
</div>

@section Scripts{
    <script defer src="~/js/homeMilesPerGallon.js"></script>
}

